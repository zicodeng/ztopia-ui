{
  "name": "ztopia-ui",
  "description": "A lightweight and multivariant React UI library built with customization and consistency in mind",
  "version": "1.14.5",
  "author": "Zico Deng",
  "homepage": "https://github.com/zicodeng/ztopia-ui#readme",
  "keywords": [
    "react",
    "react-component",
    "front-end",
    "ui",
    "ui-component",
    "ui-library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zicodeng/ztopia-ui.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zicodeng/ztopia-ui/issues"
  },
  "scripts": {
    "start": "docz dev",
    "build:dev": "NODE_ENV=development NODE_OPTIONS=--max_old_space_size=10240 ./node_modules/.bin/rollup -c --watch",
    "build:prod": "yarn prebuild-cache && NODE_ENV=production NODE_OPTIONS=--max_old_space_size=10240 ./node_modules/.bin/rollup -c && yarn postbuild-cache",
    "build-docs": "NODE_OPTIONS=--max_old_space_size=10240 docz build && yarn create-200",
    "prebuild-cache": "node ./scripts/prebuild-cache.js",
    "postbuild-cache": "node ./scripts/postbuild-cache.js",
    "release:ci": "semantic-release",
    "release:local": "yarn build:prod && env-cmd semantic-release --no-ci",
    "deploy": "yarn build-docs && surge --domain ztopia-ui.zicodeng.me ./.docz/dist",
    "create-200": "cp ./.docz/dist/index.html ./.docz/dist/200.html",
    "clean": "rm -rf .docz node_modules yarn.lock .rpt2_cache build-cache",
    "format:all": "prettier --write \"**/*.{js,jsx,ts,tsx,css,json,yml,md}\" --ignore-path ./.prettierignore && stylelint --fix \"./components/**/*.css\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.css": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{js,jsx,ts,tsx,json,yml,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@rehooks/component-size": "^1.0.3",
    "@rehooks/window-size": "^1.0.2",
    "camelcase": "^5.3.1",
    "classnames": "^2.2.6",
    "date-fns": "^2.0.0-beta.4",
    "deck.gl": "^7.2.0",
    "medium-editor": "^5.23.3",
    "moment": "^2.24.0",
    "rc-drawer": "^2.0.9",
    "rc-progress": "^2.5.2",
    "rc-slider": "^8.6.13",
    "rc-tooltip": "^3.7.3",
    "react": "^16.8.6",
    "react-big-calendar": "^0.22.0",
    "react-codemirror2": "^6.0.0",
    "react-color": "^2.17.3",
    "react-countup": "^4.2.1",
    "react-datepicker": "^2.8.0",
    "react-dom": "^16.8.6",
    "react-dropzone": "^10.1.8",
    "react-joyride": "^2.1.1",
    "react-lazyload": "^2.6.2",
    "react-map-gl": "^5.0.8",
    "react-modal": "^3.9.1",
    "react-progressive-image": "^0.6.0",
    "react-rating": "^1.7.2",
    "react-responsive-carousel": "^3.1.49",
    "react-select": "^3.0.4",
    "react-stack-grid": "^0.7.1",
    "react-toastify": "^5.3.2",
    "react-toggle": "^4.0.2",
    "react-typed": "^1.2.0",
    "react-vertical-timeline-component": "^2.5.0",
    "react-visibility-sensor": "^5.1.1",
    "recharts": "^1.7.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@commitlint/prompt": "^8.2.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/exec": "^3.3.7",
    "@semantic-release/git": "^7.0.16",
    "@types/moment": "^2.13.0",
    "@types/rc-slider": "^8.6.4",
    "@types/react": "^16.8.24",
    "@types/react-big-calendar": "^0.22.1",
    "@types/react-color": "^3.0.1",
    "@types/react-datepicker": "^2.8.1",
    "@types/react-lazyload": "^2.5.0",
    "@types/react-map-gl": "^5.0.0",
    "@types/react-modal": "^3.8.3",
    "@types/react-select": "^3.0.0",
    "@types/react-toggle": "^4.0.2",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "autoprefixer": "^9.6.1",
    "css-loader": "^3.1.0",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "3.0.2",
    "docz": "^1.2.0",
    "docz-theme-ztopia": "^0.1.1",
    "dotenv-webpack": "^1.7.0",
    "env-cmd": "^10.0.1",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.0",
    "faker": "^4.1.0",
    "folder-hash": "^3.3.0",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-custom-media": "^7.0.8",
    "postcss-extend-rule": "^3.0.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.2",
    "postcss-simple-vars": "^5.0.2",
    "rollup": "^1.23.1",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.22.1",
    "rollup-plugin-url": "^2.2.2",
    "semantic-release": "^15.13.24",
    "signale": "^1.4.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^3.0.1",
    "stylelint-prettier": "^1.1.1",
    "surge": "^0.21.3",
    "terser-webpack-plugin": "^1.4.1",
    "typescript": "^3.5.3",
    "webpack-filter-warnings-plugin": "^1.2.1"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
