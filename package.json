{
  "name": "ztopia-ui",
  "description": "A lightweight and multivariant UI library built with customization in mind",
  "version": "1.0.1",
  "author": "Zico Deng",
  "homepage": "https://github.com/zicodeng/ztopia-ui#readme",
  "keywords": [
    "react",
    "react-component",
    "front-end",
    "ui",
    "ui-component",
    "ui-library"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zicodeng/ztopia-ui.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zicodeng/ztopia-ui/issues"
  },
  "scripts": {
    "start": "docz dev",
    "build:dev": "NODE_ENV=development rollup -c --watch",
    "build:prod": "NODE_ENV=production rollup -c && yarn post-build",
    "build-docs": "docz build && yarn create-200",
    "post-build": "cp -a ./styles ./dist/styles && cp ./package.json ./dist/package.json && cp ./README.md ./dist/README.md",
    "release": "bump --commit && yarn build:prod && cd ./dist && yarn publish --non-interactive && cd ..",
    "deploy": "yarn build-docs && surge --domain ztopia-ui.zicodeng.me ./.docz/dist",
    "create-200": "cp ./.docz/dist/index.html ./.docz/dist/200.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.{md,json,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "rc-slider": "^8.6.13",
    "rc-tooltip": "^3.7.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-select": "^3.0.4",
    "react-toggle": "^4.0.2"
  },
  "devDependencies": {
    "@types/rc-slider": "^8.6.4",
    "@types/rc-tooltip": "^3.7.1",
    "@types/react": "^16.8.24",
    "@types/react-select": "^3.0.0",
    "@types/react-toggle": "^4.0.2",
    "autoprefixer": "^9.6.1",
    "chalk": "^2.4.2",
    "css-loader": "^3.1.0",
    "cssnano": "^4.1.10",
    "docz": "^1.2.0",
    "docz-theme-ztopia": "^0.0.20",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-custom-media": "^7.0.8",
    "postcss-extend-rule": "^3.0.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.2",
    "postcss-simple-vars": "^5.0.2",
    "rollup": "^1.17.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-tslint": "^0.2.2",
    "rollup-plugin-typescript2": "^0.22.1",
    "rollup-plugin-url": "^2.2.2",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.1",
    "surge": "^0.21.3",
    "terser-webpack-plugin": "^1.4.1",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "version-bump-prompt": "^5.0.4",
    "webpack-filter-warnings-plugin": "^1.2.1"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
