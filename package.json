{
  "name": "ztopia-ui",
  "description": "A lightweight and multivariant React UI library built with customization and consistency in mind",
  "version": "1.0.33",
  "author": "Zico Deng",
  "homepage": "https://github.com/zicodeng/ztopia-ui#readme",
  "keywords": [
    "react",
    "react-component",
    "front-end",
    "ui",
    "ui-component",
    "ui-library"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zicodeng/ztopia-ui.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zicodeng/ztopia-ui/issues"
  },
  "scripts": {
    "start": "docz dev",
    "build:dev": "yarn post-build && NODE_ENV=development NODE_OPTIONS=--max_old_space_size=10240 ./node_modules/.bin/rollup -c --watch",
    "build:prod": "NODE_ENV=production NODE_OPTIONS=--max_old_space_size=10240 ./node_modules/.bin/rollup -c",
    "build-docs": "docz build && yarn create-200",
    "post-build": "cp -a ./styles ./dist/styles && cp ./package.json ./dist/package.json && cp ./README.md ./dist/README.md",
    "release": "yarn build:prod && bump --commit && yarn post-build && cd ./dist && yarn publish --non-interactive && cd ..",
    "deploy": "yarn build-docs && surge --domain ztopia-ui.zicodeng.me ./.docz/dist",
    "create-200": "cp ./.docz/dist/index.html ./.docz/dist/200.html",
    "clean": "rm -rf .docz node_modules yarn.lock .rpt2_cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.{md,json,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@rehooks/component-size": "^1.0.3",
    "@rehooks/window-size": "^1.0.2",
    "classnames": "^2.2.6",
    "date-fns": "^2.0.0-beta.4",
    "deck.gl": "^7.2.0",
    "moment": "^2.24.0",
    "rc-drawer": "^2.0.3",
    "rc-progress": "^2.5.1",
    "rc-slider": "^8.6.13",
    "rc-tooltip": "^3.7.3",
    "react": "^16.8.6",
    "react-big-calendar": "^0.22.0",
    "react-countup": "^4.2.1",
    "react-datepicker": "^2.8.0",
    "react-dom": "^16.8.6",
    "react-lazyload": "^2.6.2",
    "react-map-gl": "^5.0.8",
    "react-modal": "^3.9.1",
    "react-progressive-image": "^0.6.0",
    "react-rating": "^1.7.2",
    "react-responsive-carousel": "^3.1.49",
    "react-select": "^3.0.4",
    "react-toastify": "^5.3.2",
    "react-toggle": "^4.0.2",
    "react-visibility-sensor": "^5.1.1",
    "recharts": "^1.7.0"
  },
  "devDependencies": {
    "@types/moment": "^2.13.0",
    "@types/rc-slider": "^8.6.4",
    "@types/rc-tooltip": "^3.7.1",
    "@types/react": "^16.8.24",
    "@types/react-big-calendar": "^0.22.1",
    "@types/react-datepicker": "^2.8.1",
    "@types/react-lazyload": "^2.5.0",
    "@types/react-map-gl": "^5.0.0",
    "@types/react-select": "^3.0.0",
    "@types/react-toggle": "^4.0.2",
    "autoprefixer": "^9.6.1",
    "chalk": "^2.4.2",
    "css-loader": "^3.1.0",
    "cssnano": "^4.1.10",
    "docz": "^1.2.0",
    "docz-theme-ztopia": "^0.0.27",
    "dotenv-webpack": "^1.7.0",
    "faker": "^4.1.0",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-custom-media": "^7.0.8",
    "postcss-extend-rule": "^3.0.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.2",
    "postcss-simple-vars": "^5.0.2",
    "rollup": "^1.19.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-tslint": "^0.2.2",
    "rollup-plugin-typescript2": "^0.22.1",
    "rollup-plugin-url": "^2.2.2",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.1",
    "surge": "^0.21.3",
    "terser-webpack-plugin": "^1.4.1",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "version-bump-prompt": "^5.0.4",
    "webpack-filter-warnings-plugin": "^1.2.1"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
